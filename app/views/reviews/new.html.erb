<div class="new-review-container">
  <div class="row">
    <div class="col-12 col-md-6">
      <div class="new-review-form">
        <h1>New Review for <%= @activity.title %></h1>

        <%= simple_form_for [@activity, @review], url: reviews_path(@activity.class, @activity.id) do |f| %>
          <%= f.input :rating %>
          <%= f.input :content %>
          <%= f.submit class: "date-btn" %>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-md-6">
      <div class="new-review-img">
      <%= cl_image_tag @activity.photos.first.key, crop: :fill %>
      </div>
    </div>
  </div>
</div>


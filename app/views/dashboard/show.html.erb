<div class="dashboard-container">
  <h1 class="dashboard-title"><%= @user.username.capitalize %>'s Dashboard</h1>



  <div class="d-flex justify-content-between">
    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active dash-button" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">Saved Dates</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link dash-button" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">My Uploaded Dates</a>
      </li>
    </ul>
    <div><%= link_to 'Make a new package', new_package_path, class: 'date-btn date-btn-lg date-btn-pink' %></div>
  </div>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
      <%= render 'dashboard/liked', user: @user, liked_dates: @liked_dates, liked_packages: @liked_packages  %>

    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
      <%= render 'dashboard/owned', all_owned: @all_owned %>

    </div>
  </div>


</div>


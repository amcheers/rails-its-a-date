<%# <div class="d-flex align-items-center"> %>
    <div class="dashboard-column-container">
    	<div class="dashboard-column">
    	  <div class="dashboard-heading">
    	    Saved Date Activities
    	  </div>
    	  <ul>
    	    <% @user.favorite_activities.each do |activity| %>
					
    	      <li>
							<div class="index-card">
								<div class="date-photo">
									<%= cl_image_tag activity.activity_type.camelcase.constantize.find(activity.activity_id).photos.first.key, height: 200, width: 200, crop: :fill, class: "photo-centered" %>
								</div>
								<div class="date-info">
									<div class="date-categories">
										<% activity.activity_type.camelcase.constantize.find(activity.activity_id).categories.take(3).each do |c| %>
										<div class="date-category"><%= c.name %></div>
										<% end %>
									</div>
									<div class="date-title"><%= activity.activity_type.camelcase.constantize.find(activity.activity_id).title %></div>
									<div class="date-location"><i class="fas fa-map-marker date-detail-marker"></i> <%= activity.activity_type.camelcase.constantize.find(activity.activity_id).location %></div>
									<div class="date-reviews"><%= activity.activity_type.camelcase.constantize.find(activity.activity_id).reviews.count %> Reviews</div>
									<%= link_to 'Details', dates_show_path(activity.activity_type.camelcase.constantize.find(activity.activity_id)), class: "date-btn" %>
								</div>
        			</div>
						</li>
    	    <% end %>
    	  </ul>
    	</div>
    </div>

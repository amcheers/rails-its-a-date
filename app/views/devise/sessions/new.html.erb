<div class="log-container footer-log-in" style="background-image:url('<%= cl_image_path("https://res.cloudinary.com/dmwylcvjz/image/upload/v1607276350/djim-loic-HL4MRlEyqxU-unsplash_lfmnoq.jpg") %>')">
  <div class="log-in-form">
    <h2 class="form-title">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs form-input">
        <%= f.input :email,
        required: false,
        autofocus: true,
        input_html: { autocomplete: "email" } %>
        <%= f.input :password,
        required: false,
        input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions submit-new-review-btn">
      <%= f.button :submit, "Log in", class: "date-btn date-btn-lg" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

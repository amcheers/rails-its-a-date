<div class="navbar sticky transparant navbar-expand-sm navbar-light navbar-lewagon" id="navbar">

  <div class="d-flex justify-content-start align-items-baseline">
    <%= link_to '/', class: "navbar-brand" do %>
    <%= image_tag "Itsadate_logo.png", class:"logo-calender" %>
    <% end %>
    <h3 class="navbar-site-name">It's a Date</h3>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item-special">
        <%= link_to "Home", root_path, class: "nav-link active", data: { turbolinks: false } %>
      </li>
      <li class="nav-item-special">
        <%= link_to "Dates", dates_index_path, class: "nav-link" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "Packages", packages_path, class: "nav-link" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "Upload your Date", new_dashboard_date_path, class: "nav-link" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "About Us", "#", class: "nav-link" %>
      </li>
      <% if current_user.admin? %>
      <li class="nav-item-special">
        <%= link_to "Admin Page", rails_admin_path, class: "nav-link" %>
      </li>
      <% end %>
      <li class="nav-item-special">
        <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, crop: :fill, class: "avatar-icon dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
        <%= cl_image_tag "default_user_i0mgt4.jpg", crop: :fill , class: "avatar-icon dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My Dashboard", dashboard_path, class: "dropdown-item" %>
          <%= link_to "My Profile", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item-special">
        <%= link_to "Home", root_path, class: "nav-link active" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "Dates", dates_index_path, class: "nav-link" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "Packages", packages_path, class: "nav-link" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "About Us", "#", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link log-in" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>


<script>
    // When the user scrolls the page, execute myFunction
    window.onscroll = function() {
      myFunction()
    };

    // Get the navbar
    var navbar = document.getElementById("navbar");

    // Add the sticky class to the navbar when you reach its scroll position. Remove "sticky" when you leave the scroll position
    function myFunction() {
      if (window.pageYOffset > 0) {
        navbar.classList.remove("transparant")
      } else {
        navbar.classList.add("transparant");
      }
    }
  </script>

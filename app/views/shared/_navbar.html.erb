<div class="navbar shadow navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to '/', class: "navbar-brand" do %>
  <%= image_tag "Itsadate_logo.png", class:"logo-calender" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Home", root_path, class: "nav-link #{'active' if params[:controller] == 'pages' && params[:action] == 'home'}" %>
      </li>
      <li class="nav-item">
        <%= link_to "Dates", dates_index_path, class: "nav-link #{'active' if params[:controller] == 'dates' && (params[:action] == 'index' || params[:action] == 'show')}" %>
      </li>
      <li class="nav-item">
        <%= link_to "Packages", packages_path, class: "nav-link #{'active' if params[:controller] == 'packages' && (params[:action] == 'index' || params[:action] == 'show')}" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "Upload your Date", new_dashboard_date_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "About Us", "#", class: "nav-link" %>
      </li>
      <% if current_user.admin? %>
      <li class="nav-item">
        <%= link_to "Admin Page", rails_admin_path, class: "nav-link" %>
      </li>
      <% end %>
      <li class="nav-item">
        <%= link_to "Dashboard", dashboard_path, class: "nav-link #{'active' if params[:controller] == 'dashboard' && params[:action] == 'show'}" %>
      </li>
      <li class="nav-item dropdown">
        <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, crop: :fill , class: "avatar-icon dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
        <%= cl_image_tag "default_user_i0mgt4.jpg", crop: :fill , class: "avatar-icon dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Action", "#", class: "dropdown-item" %>
          <%= link_to "Another action", "#", class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      </li>
      <% else %>
      <li class="nav-item-special">
        <%= link_to "Home", root_path, class: "nav-link active" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "Dates", dates_index_path, class: "nav-link" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "Packages", packages_path, class: "nav-link" %>
      </li>
      <li class="nav-item-special">
        <%= link_to "About Us", "#", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Login", new_user_session_path, class: "nav-link log-in" %>
      </li>
      <% end %>
    </ul>
  </div>
</div>

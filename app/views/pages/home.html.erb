<div id="carouselExampleSlidesOnly" style="z-index: 0" class="carousel slide" data-ride="carousel">
  <div class="banner" style="position: absolute; z-index: 1;">
    <div class="container">
      <div class="row justify-content-center">
        <h1 class="banner-text-two">Find unique Activities for Dates</h1>
        <h1 class="banner-text-one">Uncomplicate the Unforgettable</h1>
      </div>
    </div>
    <div class="container banner-content">
      <div class="row justify-content-center">

        <div class="search-bar-home">
          <%= form_tag dates_index_path, method: :get, class: "form-inline" do %>

          <%= text_field_tag :query_location,
          params[:query_location],
          class: "search-field",
          placeholder: "Where?"
          %>
          <%= text_field_tag :query_title_description,
          params[:query_title_description],
          class: "search-field",
          placeholder: "What?"
          %>

          <%= submit_tag "Search", id: "btn-search" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="banner" style="background-image:url('<%= cl_image_path("https://res.cloudinary.com/dmwylcvjz/image/upload/v1607078081/nathan-dumlao-EdULZpOKsUE-unsplash_n2sxii.jpg", ) %>')">
      </div>
    </div>

    <div class="carousel-item">
      <div class="banner" style="background-image:url('<%= image_path("https://images.unsplash.com/photo-1548051072-b34898021f8b?ixid=MXwxMjA3fDB8MHxzZWFyY2h8MXx8ZGF0ZXxlbnwwfDB8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60", ) %>')">
      </div>
    </div>
    <div class="carousel-item">
      <div class="banner" style="background-image:url('<%= image_path("https://images.unsplash.com/photo-1529175283207-194a414b9ffa?ixid=MXwxMjA3fDB8MHxzZWFyY2h8Mnx8ZGF0ZXxlbnwwfDB8MHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60", ) %>')">
      </div>
    </div>
  </div>
</div>

<div class="index-package-body">
 <div class="package-show-header">
     Date Packages
 </div>
 <div class="d-flex justify-content-start"><%= link_to 'Create a package', new_package_path, class: 'date-btn date-btn-lg' %></div>
 <div class="wrapper">
     <% @packages.each do |package| %>
     <div class="row-index">
         <%= link_to edit_package_path(package), class: "link-to-package" do%>
         <div class="title-package-index">
             <%= package.title%>
         </div>
         <div class="dates-index-package">
             <% package.date_activities.each do |date| %>
             <div class="date-index-package" style="background-image: url('<%= cl_image_path  date.photos.first.key %>')">
                 <%= date.title %>
             </div>
             <% end %>
         </div>
         <% end %>
     </div>
     <% end %>
 </div>
 <%= link_to 'Back', root_path, class: "link-back" %>
</div>